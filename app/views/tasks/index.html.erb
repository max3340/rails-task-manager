<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <div class="tasks_list">
    <input type="checkbox" name="task_done">
    <li><%= link_to task.title, task_path(task) %></li>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </div>
  <% end %>
</ul>

<%= link_to "add a new task", new_path %>

